<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             <!--#if Localization -->
             xmlns:i18n="clr-namespace:Company.MobileApp.i18n;assembly=Company.MobileApp"
             <!--#endif -->
             Title="{Binding Title}"
             BackgroundColor="{StaticResource PrimaryDark}"
             x:Name="view"
             x:Class="Company.MobileApp.Views.SplashScreenPage">

    <StackLayout HorizontalOptions="CenterAndExpand"
                 VerticalOptions="CenterAndExpand">
        <Image>
            <Image.Source>
                <OnPlatform x:TypeArguments="ImageSource">
                    <On Platform="Android">launchscreen_icon.png</On>
                    <On Platform="iOS">AppIcon.png</On>
                </OnPlatform>
            </Image.Source>
        </Image>
        <ActivityIndicator Color="{StaticResource Accent}" IsRunning="true" />
<!--#if Localization -->
        <Label Text="{i18n:Translate LoadingText}" TextColor="{StaticResource Accent}" />
<!--#else -->
        <Label Text="Loading..." TextColor="{StaticResource Accent}" />
<!--#endif -->
    </StackLayout>

</ContentPage>